# ==============================================
# SOCIAL LOGIN CONFIGURATION
# ==============================================
# IMPORTANT: Copy this file to .env and fill in your actual credentials
# Never commit .env file to git!

# Frontend URL (where your app is hosted)
# For local development: http://localhost:8081
# For production: https://yourdomain.com
FRONTEND_URL=http://localhost:8081

# JWT Secret (REQUIRED - generate a secure random string)
# Generate using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Google OAuth 2.0
# Setup guide: See SOCIAL_LOGIN_SETUP.md
# Get credentials from: https://console.cloud.google.com/apis/credentials
# Redirect URI: http://localhost:8081/auth/callback/google (for development)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Facebook OAuth
# Setup guide: See SOCIAL_LOGIN_SETUP.md
# Get credentials from: https://developers.facebook.com/apps/
# Redirect URI: http://localhost:8081/auth/callback/facebook (for development)
FACEBOOK_APP_ID=your-facebook-app-id-here
FACEBOOK_APP_SECRET=your-facebook-app-secret-here

# VK OAuth (VKontakte)
# Setup guide: See SOCIAL_LOGIN_SETUP.md
# Get credentials from: https://vk.com/apps?act=manage
# Redirect URI: http://localhost:8081/auth/callback/vk (for development)
VK_CLIENT_ID=your-vk-client-id-here
VK_CLIENT_SECRET=your-vk-client-secret-here

# ==============================================
# OTHER API KEYS (Optional)
# ==============================================

# OpenAI API Key
OPENAI_API_KEY=your-openai-api-key-here

# Stripe Payment Keys
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id-here
PAYPAL_CLIENT_SECRET=your-paypal-client-secret-here

# Payriff Payment Gateway
# Get credentials from: https://dashboard.payriff.com
PAYRIFF_MERCHANT_ID=your-payriff-merchant-id-here
PAYRIFF_SECRET_KEY=your-payriff-secret-key-here
# Use https://api.payriff.com for production
# Use https://sbapi.payriff.com for sandbox/testing
PAYRIFF_BASE_URL=https://api.payriff.com

# Push Notifications
EXPO_PUSH_TOKEN=your-expo-push-token-here
FCM_SERVER_KEY=your-fcm-server-key-here

# Analytics
GOOGLE_ANALYTICS_ID=your-google-analytics-id-here
MIXPANEL_TOKEN=your-mixpanel-token-here

# Google Maps
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# AWS S3 Storage
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_REGION=your-aws-region-here
AWS_BUCKET_NAME=your-s3-bucket-name-here

# Twilio SMS
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here

# Resend Email (REQUIRED for email confirmation)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=your-resend-api-key-here

# Email Configuration
EMAIL_FROM=naxtapaz@gmail.com
EMAIL_FROM_NAME=NaxtaPaz

# Socket.IO
SOCKET_IO_URL=wss://your-socket-server.com

# ==============================================
# LIVEKIT (REAL-TIME AUDIO/VIDEO + SERVER RECORDING)
# ==============================================
# Client connection URL (WebSocket)
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret
# Optional: explicit API host for server-side (https://...). If omitted, LIVEKIT_URL is used.
LIVEKIT_API_HOST=https://your-project.livekit.cloud

# Server-side recording (LiveKit Egress -> S3 compatible storage)
CALL_RECORDING_S3_BUCKET=your-bucket
CALL_RECORDING_S3_REGION=eu-west-1
CALL_RECORDING_S3_ACCESS_KEY=your-access-key
CALL_RECORDING_S3_SECRET=your-secret
# Optional for MinIO / custom S3:
CALL_RECORDING_S3_ENDPOINT=
CALL_RECORDING_S3_FORCE_PATH_STYLE=false
