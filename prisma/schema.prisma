generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  MODERATOR
  ADMIN
}

enum StoreStatus {
  ACTIVE
  GRACE_PERIOD
  DEACTIVATED
  ARCHIVED
}

enum AdType {
  FREE
  STANDARD
  PREMIUM
  VIP
}

model User {
  id                  String              @id @default(cuid())
  email               String              @unique
  name                String
  avatar              String?
  phone               String?
  verified            Boolean             @default(false)
  passwordHash        String?
  balance             Int                 @default(0)
  role                Role                @default(USER)
  moderatorPermissions String[]           @default([])
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt

  socialAccounts      SocialAccount[]
  verificationTokens  VerificationToken[]
  passwordResetTokens PasswordResetToken[]
  supportTickets      SupportTicket[]
  supportResponses    SupportResponse[]
  listings            Listing[]
  stores              Store[]
}

model Listing {
  id                String    @id @default(cuid())
  title             Json      // { az: string, ru: string }
  description       Json      // { az: string, ru: string }
  price             Float
  currency          String    @default("AZN")
  location          Json      // { az: string, ru: string }
  categoryId        Int
  subcategoryId     Int
  images            String[]
  userId            String
  storeId           String?
  views             Int       @default(0)
  isFeatured        Boolean   @default(false)
  isPremium         Boolean   @default(false)
  adType            AdType    @default(FREE)
  contactPreference String    @default("both")
  favorites         Int       @default(0)
  isArchived        Boolean   @default(false)
  createdAt         DateTime  @default(now())
  expiresAt         DateTime
  archivedAt        DateTime?
  
  // Discount fields
  originalPrice     Float?
  discountPercentage Float?
  hasDiscount       Boolean   @default(false)
  discountEndDate   DateTime?
  
  // Creative effects (stored as JSON)
  creativeEffects   Json?
  
  // Promotion fields
  promotionEndDate  DateTime?
  purchasedViews    Int?
  
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  store  Store?  @relation(fields: [storeId], references: [id], onDelete: SetNull)
  
  @@index([userId])
  @@index([storeId])
  @@index([categoryId])
  @@index([isArchived])
  @@index([expiresAt])
}

model Store {
  id                  String       @id @default(cuid())
  userId              String
  name                String
  categoryName        String
  address             String
  contactInfo         Json         // { phone?, email?, website?, whatsapp? }
  description         String
  logo                String?
  coverImage          String?
  planId              String
  adsUsed             Int          @default(0)
  maxAds              Int
  deletedListings     String[]     @default([])
  isActive            Boolean      @default(true)
  status              StoreStatus  @default(ACTIVE)
  followers           String[]     @default([])
  rating              Int          @default(0)
  totalRatings        Int          @default(0)
  createdAt           DateTime     @default(now())
  expiresAt           DateTime
  gracePeriodEndsAt   DateTime?
  deactivatedAt       DateTime?
  archivedAt          DateTime?
  lastPaymentReminder DateTime?
  
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  listings Listing[]
  
  @@index([userId])
  @@index([status])
  @@index([expiresAt])
}

model SupportTicket {
  id                 String           @id @default(cuid())
  user               User             @relation(fields: [userId], references: [id])
  userId             String
  subject            String
  message            String
  category           String
  priority           String           @default("medium")
  status             String           @default("open")
  attachments        String[]         @default([])
  assignedModeratorId String?
  moderatorNotes     String?
  resolution         String?
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
  responses          SupportResponse[]
}

model SupportResponse {
  id        String       @id @default(cuid())
  ticket    SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  ticketId  String
  user      User         @relation(fields: [userId], references: [id])
  userId    String
  message   String
  isAdmin   Boolean      @default(false)
  attachments String[]   @default([])
  createdAt DateTime     @default(now())
}

model SocialAccount {
  id        String   @id @default(cuid())
  provider  String
  socialId  String
  email     String
  name      String
  avatar    String?

  user      User     @relation(fields: [userId], references: [id])
  userId    String

  @@unique([provider, socialId])
}

model VerificationToken {
  id        String   @id @default(cuid())
  token     String   @unique
  expiresAt DateTime

  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  expiresAt DateTime

  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

