{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./*", "../*"]
    }
  },
  "include": ["./**/*.ts"],
  "ts-node": {
    "files": true,
    "transpileOnly": true
  }
}
